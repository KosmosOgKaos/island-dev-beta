{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2017", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@island.is/island-ui/core": ["lib/island-ui/core/src/index.ts"],
      "@island.is/island-ui/core/types": ["lib/island-ui/core/types.ts"],
      "@island.is/island-ui/theme": ["lib/island-ui/theme/src/index.ts"],
      "@island.is/island-ui/utils": ["lib/island-ui/utils/src/index.ts"],
      "@cmp": ["src/components"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
